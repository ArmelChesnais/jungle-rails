<h1>Thank you for your order, <%= @user.first_name %></h1>
<p>
  You have successfully ordered:<br>
</p>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_total = 0 %>
    <% @order.line_items.each do |line| %>
      <%= render 'item', product_id: line.product_id, quantity: line.quantity %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        TOTAL:
      </th>
      <th>
        <%= @cart_total %>
      </th>
    </tr>
  </tfoot>
</table>